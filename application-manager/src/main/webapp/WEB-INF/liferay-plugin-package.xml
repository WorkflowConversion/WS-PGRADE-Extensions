<?xml version="1.0"?>
<!DOCTYPE plugin-package PUBLIC "-//Liferay//DTD Plugin Package 6.2.0//EN" "http://www.liferay.com/dtd/liferay-plugin-package_6_2_0.dtd">

<plugin-package>
	<!-- portlet.name property is defined in pom.xml -->
    <name>${short.name}</name>
    <module-id>com.workflowconversion/${short.name}/${project.version}/war</module-id>
    <types>
        <type>portlet</type>
    </types>
    <tags>
        <tag>workflow</tag>
        <tag>fine-grained interoperability</tag>
    </tags>
    <short-description>WS-PGRADE Application Manager.</short-description>
    <long-description>A simple application database manager for WS-PGRADE (including UNICORE, albeit read-only).</long-description>
    <change-log></change-log>
    <page-url>https://github.com/WorkflowConversion/WorkflowImporter</page-url>
    <author>Luis de la Garza, University of Tuebingen</author>
    <licenses>
        <license osi-approved="true">GPL</license>
    </licenses>
    <liferay-versions>
        <liferay-version>6.2.0+</liferay-version>
    </liferay-versions>
</plugin-package>