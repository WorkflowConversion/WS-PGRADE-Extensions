<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>WS-PGRADE Portlet (${short.name})</display-name>
    
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>        
    </listener>
    <listener>
    	<listener-class>com.workflowconversion.portlet.core.servlet.WorkflowConversionContextListener</listener-class>
    </listener>
    
    <context-param>
    	<description>
    		Using UI development mode enables developers to test changes without having to restart
    		the portal because resources depending on gUSE will be simple mocks.
    	</description>
    	<param-name>ui.development.mode</param-name>
    	<param-value>false</param-value>
    </context-param>
    <context-param>
    	<description>Location of the XML file containing the resources/applications</description>
    	<param-name>resource.xmlFile.location</param-name>
    	<param-value>/home/guseuser/guse/workflow_conversion/resources.xml</param-value>
    </context-param>
    <context-param>
    	<description>Duration of the caches, in seconds</description>
    	<param-name>cache.seconds.duration</param-name>
    	<param-value>120</param-value>
    </context-param>
    
	<!-- short.name property is defined in build.propeties --> 
    <!-- Vaadin specific entries -->
    <context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>true</param-value>
	</context-param>
	<servlet>
		<servlet-name>${short.name}Servlet</servlet-name>
		<servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
		<init-param>
			<description>Vaadin UI class to start</description>
			<param-name>UI</param-name>
			<param-value>com.workflowconversion.portlet.appmanager.ApplicationManagerUI</param-value>
		</init-param>
		<load-on-startup>10</load-on-startup>
	</servlet>
	<servlet-mapping> 
		<servlet-name>${short.name}Servlet</servlet-name>
		<url-pattern>/${short.name}Servlet/*</url-pattern>	
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>${short.name}Servlet</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>	
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>${short.name}Servlet</servlet-name>
		<url-pattern>/*</url-pattern>	
	</servlet-mapping>
	
    <!-- the next sections are needed to enable communication with gUSE's back end -->
    <servlet>
        <servlet-name>InitServices</servlet-name>
        <servlet-class>hu.sztaki.lpds.information.local.InitAxisServices</servlet-class>
        <init-param>
            <param-name>baseurl</param-name>
            <!-- short.name property is defined in build.properties -->
            <param-value>http://localhost:8080/${short.name}/servlet/AxisServlet</param-value>
        </init-param>
        <init-param>
            <param-name>install-4</param-name>
            <!-- short.name property is defined in build.properties -->
            <param-value>webapps/${short.name}/WEB-INF/lib/wfi.wsdd</param-value>
        </init-param>
        <init-param>
            <param-name>install-1</param-name>
            <!-- short.name property is defined in build.properties -->
            <param-value>webapps/${short.name}/WEB-INF/lib/storage.wsdd</param-value>
        </init-param>
        <init-param>
            <param-name>install-2</param-name>
            <!-- short.name property is defined in build.properties -->
            <param-value>webapps/${short.name}/WEB-INF/lib/submitter.wsdd</param-value>
        </init-param>
        <init-param>
            <param-name>install-3</param-name>
            <!-- short.name property is defined in build.properties -->
            <param-value>webapps/${short.name}/WEB-INF/lib/remote.wsdd</param-value>
        </init-param>
        <init-param>
            <param-name>run-0</param-name>
            <param-value>hu.sztaki.lpds.information.local.PropertyInitCommandImpl</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CredentialProvider</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>WorkflowStatusHandlerService</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitServices</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>hu.sztaki.lpds.pgportal.servlet.InitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/initservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ajax</servlet-name>
        <servlet-class>hu.sztaki.lpds.pgportal.servlet.ajax</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ajax</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lg</servlet-name>
        <servlet-class>hu.sztaki.lpds.pgportal.servlet.LoggServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>lg</servlet-name>
        <url-pattern>/logg</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>tce</servlet-name>
        <servlet-class>hu.sztaki.lpds.pgportal.servlet.TinyMCEList</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tce</servlet-name>
        <url-pattern>/tce</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>       
    </servlet>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>org.apache.axis.transport.http.AdminServlet</servlet-class>
        <load-on-startup>100</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SOAPMonitorService</servlet-name>
        <servlet-class>org.apache.axis.monitor.SOAPMonitorService</servlet-class>
        <init-param>
            <param-name>SOAPMonitorPort</param-name>
            <param-value>5001</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/servlet/AxisServlet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SOAPMonitorService</servlet-name>
        <url-pattern>/SOAPMonitor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CredentialProvider</servlet-name>
        <url-pattern>/CredentialProvider</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WorkflowStatusHandlerService</servlet-name>
        <url-pattern>/WorkflowStatusHandlerService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
