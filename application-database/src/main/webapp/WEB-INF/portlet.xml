<?xml version='1.0' encoding='UTF-8' ?>
<portlet-app xmlns='http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd'
	version='2.0'>
	<portlet>
		<description>WS-PGRADE Application Database (v. ${version})</description>
		<!-- portlet.name property is defined in build.properties -->
		<portlet-name>${portlet.name}</portlet-name>
		<display-name>WS-PGRADE Application Database</display-name>
		<portlet-class>com.workflowconversion.portlet.CustomVaadinPortlet</portlet-class>
		<init-param>
            <name>UI</name>
            <value>com.workflowconversion.portlet.appdb.ApplicationDatabasePortlet</value>
        </init-param>
        <init-param>
            <name>widgetset</name>
            <value>com.workflowconversion.portlet.appdb.WidgetSet</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>WS-PGRADE Application Database</title>
			<short-title>WS-PGRADE Application Database</short-title>
		</portlet-info>
		<!-- only admins are allowed to add this portlet to pages -->
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>		
	</portlet>
</portlet-app>
