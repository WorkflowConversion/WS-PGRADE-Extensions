<?xml version="1.0" encoding="UTF-8"?>
<configuration>
        <property name="webAppContextName" value="Sample" />
        
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	 	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>INFO</level>
    	</filter>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%date{dd/MM/yy HH:mm:ss}] %-5level %logger{0}: %msg \(%thread\)%n</pattern>
		</layout>
	</appender>

	<appender name="LOG_FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.home}/logs/asm_${webAppContextName}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.home}/logs/asm_${webAppContextName}_%d{yyyy-MM-dd}.log</fileNamePattern><!-- daily rollover -->
			<maxHistory>30</maxHistory><!-- keep 30 days' worth of history -->
		</rollingPolicy>
		<encoder>
			<pattern>[%date{dd/MM/yy HH:mm:ss}] %-5level %logger{0}.%M: %msg \(%thread\)%n</pattern>
			<!-- pattern>[%date{dd/MM/yy HH:mm:ss}] %-5level %logger{0}.%M: %msg%n</pattern-->
			<!-- pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern-->
		</encoder>
	</appender>

	<logger name="hu.sztaki.lpds" level="trace">
		<appender-ref ref="LOG_FILE" />
	</logger>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>